<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5pt"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tags_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10pt"
            android:text="Tags: "/>
        <EditText
            android:id="@+id/tag_edit_text_box"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_marginLeft="10pt"
            android:autofillHints="tags" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:text="Camera"
            android:layout_gravity="center"
            android:layout_margin="5pt"
            android:onClick="startCamera"/>
        <Button
            android:id="@+id/save_camera_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:text="Save"
            android:layout_gravity="center"
            android:layout_margin="5pt"
            android:onClick="savePhoto"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/search_for_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:text="Find"
            android:layout_gravity="center"
            android:layout_margin="5pt"
            android:onClick="searchTags"/>
        <EditText
            android:id="@+id/tag_search_edit_box"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="85"
            android:inputType="text"
            android:layout_marginLeft="10pt"
            android:autofillHints="tags" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/top_small_image"
            android:layout_width="125dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10pt"/>
        <TextView
            android:id="@+id/top_small_image_text"
            android:layout_width="match_parent"
            android:layout_height="73dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mid_small_image"
            android:layout_width="125dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10pt"/>
        <TextView
            android:id="@+id/mid_small_image_text"
            android:layout_width="match_parent"
            android:layout_height="73dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bot_small_image"
            android:layout_width="125dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10pt"/>
        <TextView
            android:id="@+id/bot_small_image_text"
            android:layout_width="match_parent"
            android:layout_height="73dp"/>
    </LinearLayout>

    <com.example.a3.MyDrawingArea
        android:id="@+id/blank_drawing_area"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"/>

</LinearLayout>